    </cleanup_and_final_inspection>
  </task_assignments_by_phase>

  <safety_guidelines_by_age_group>
    <adults>
      <power_tools_allowed>true</power_tools_allowed>
      <heavy_lifting_max_weight>50_pounds_solo</heavy_lifting_max_weight>
      <height_work_allowed>true_with_proper_safety</height_work_allowed>
      <required_safety_equipment>safety_glasses, work_gloves, steel_toe_boots</required_safety_equipment>
    </adults>

    <teens_16_plus>
      <power_tools_allowed>with_supervision</power_tools_allowed>
      <heavy_lifting_max_weight>30_pounds_solo</heavy_lifting_max_weight>
      <height_work_allowed>limited_with_supervision</height_work_allowed>
      <required_safety_equipment>safety_glasses, work_gloves, closed_toe_shoes</required_safety_equipment>
      <recommended_tasks>measuring, marking, material_prep, cleanup, documentation</recommended_tasks>
    </teens_16_plus>

    <teens_under_16>
      <power_tools_allowed>false</power_tools_allowed>
      <heavy_lifting_max_weight>15_pounds_solo</heavy_lifting_max_weight>
      <height_work_allowed>false</height_work_allowed>
      <required_safety_equipment>safety_glasses, work_gloves</required_safety_equipment>
      <recommended_tasks>cleanup, material_organization, documentation, support_roles</recommended_tasks>
    </teens_under_16>

    <children>
      <power_tools_allowed>false</power_tools_allowed>
      <heavy_lifting_max_weight>none</heavy_lifting_max_weight>
      <height_work_allowed>false</height_work_allowed>
      <required_safety_equipment>safety_glasses_when_observing</required_safety_equipment>
      <recommended_tasks>cleanup, snack_support, documentation_assistant</recommended_tasks>
      <supervision_required>constant</supervision_required>
    </children>
  </safety_guidelines_by_age_group>

