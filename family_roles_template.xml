    <foundation_phase>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_days>1-3</timeline_days>
      <safety_notes>Heavy lifting, power tools, precise measurements required</safety_notes>
    </foundation_phase>

    <framing_phase>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_days>2-4</timeline_days>
      <safety_notes>Power tools, height work, heavy materials</safety_notes>
    </framing_phase>

    <decking_installation>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_days>2-3</timeline_days>
      <safety_notes>Knee pads recommended, repetitive work, precision cutting</safety_notes>
    </decking_installation>

    <railing_installation>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_days>1-2</timeline_days>
