  <task_assignments_by_phase>
    <planning_phase>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_weeks>2-4</timeline_weeks>
    </planning_phase>

    <permit_and_prep_phase>
      <primary_responsible></primary_responsible>
      <supporting_roles></supporting_roles>
      <timeline_weeks>1-2</timeline_weeks>
