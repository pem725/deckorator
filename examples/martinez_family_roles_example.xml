  <task_assignments_by_phase>
    <planning_phase>
      <primary_responsible>Carlos (project coordinator) with Grandpa Jose (technical advisor)</primary_responsible>
      <supporting_roles>Maria (research and permits), Isabella (documentation)</supporting_roles>
      <timeline_weeks>3</timeline_weeks>
    </planning_phase>

    <permit_and_prep_phase>
      <primary_responsible>Carlos and Maria</primary_responsible>
      <supporting_roles>Diego (site clearing), Isabella (photo documentation)</supporting_roles>
      <timeline_weeks>1</timeline_weeks>
    </permit_and_prep_phase>

    <foundation_phase>
      <primary_responsible>Carlos and Diego (heavy work)</primary_responsible>
      <supporting_roles>Grandpa Jose (technical guidance), Maria (measurements)</supporting_roles>
      <timeline_days>2</timeline_days>
      <safety_notes>Heavy digging and concrete work - Diego handles physical labor, Grandpa Jose provides expertise</safety_notes>
    </foundation_phase>

    <framing_phase>
      <primary_responsible>Carlos with Grandpa Jose (cutting and precision work)</primary_responsible>
      <supporting_roles>Diego (material handling), Maria and Isabella (measuring and marking)</supporting_roles>
      <timeline_days>3</timeline_days>
      <safety_notes>Power tool work - Grandpa Jose handles precision cutting, Carlos does assembly</safety_notes>
    </framing_phase>

    <decking_installation>
      <primary_responsible>Carlos and Diego (installation)</primary_responsible>
      <supporting_roles>Grandpa Jose (spacing guidance), Maria (board preparation)</supporting_roles>
      <timeline_days>2</timeline_days>
      <safety_notes>Repetitive work - rotate roles to prevent fatigue, Diego handles board moving</safety_notes>
    </decking_installation>

    <railing_installation>
      <primary_responsible>Grandpa Jose (precision work) with Carlos</primary_responsible>
      <supporting_roles>All family members can help with this detailed work</supporting_roles>
      <timeline_days>2</timeline_days>
      <safety_notes>Detail work - great opportunity for everyone to contribute safely</safety_notes>
    </railing_installation>

    <finishing_phase>
      <primary_responsible>Maria and Isabella (staining and detail work)</primary_responsible>
      <supporting_roles>Carlos (prep work), Diego (cleanup between coats)</supporting_roles>
      <timeline_days>1</timeline_days>
      <safety_notes>Chemical work - excellent ventilation, proper equipment for all</safety_notes>
    </finishing_phase>

    <cleanup_and_final_inspection>
      <primary_responsible>Entire family team effort</primary_responsible>
      <supporting_roles>Isabella (final photos), Carlos (inspection coordination)</supporting_roles>
      <timeline_days>0.5</timeline_days>
    </cleanup_and_final_inspection>
  </task_assignments_by_phase>

  <safety_guidelines_by_age_group>
    <adults>
      <power_tools_allowed>true</power_tools_allowed>
      <heavy_lifting_max_weight>50_pounds_solo</heavy_lifting_max_weight>
      <height_work_allowed>true_with_proper_safety</height_work_allowed>
      <required_safety_equipment>safety_glasses, work_gloves, steel_toe_boots</required_safety_equipment>
    </adults>

    <teens_16_plus>
      <power_tools_allowed>with_supervision</power_tools_allowed>
      <heavy_lifting_max_weight>30_pounds_solo</heavy_lifting_max_weight>
      <height_work_allowed>limited_with_supervision</height_work_allowed>
      <required_safety_equipment>safety_glasses, work_gloves, closed_toe_shoes</required_safety_equipment>
      <recommended_tasks>measuring, marking, material_prep, cleanup, documentation</recommended_tasks>
    </teens_16_plus>

    <teens_under_16>
